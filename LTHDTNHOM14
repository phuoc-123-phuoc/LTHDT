void Menu2(LIST &l)
{
	int luachon;
	while((luachon = menu2()) !=0)
	{
		switch(luachon)
		{
			case 1:
				l.Tim_msv();
				system("pause");
				break;
			case 2:
				l.Tim_Ten();
				system("pause");
				break;
			case 3:
				l.Tim_Tuoi();
				system("pause");
				break;
			case 4:
				l.Tim_dtb();
				system("pause");
				break;
			case 5:
				l.Tim_Gioitinh();
				system("pause");
				break;
			default:
				printf("\nLua chon cua ban chua hop le !");
				system("pause");
			    break;	
		}
	}
}
int main()
{   
	LIST l;
	int luachon;
	while((luachon = menu()) !=0)
	{
		switch(luachon)
		{
			case 1:
				l.NhapDS();
				system("pause");
				break;
			case 2:
				l.XuatDanhSach();
				system("pause");
				break;
			case 3:
				l.Sua_msv();
				l.XuatDanhSach();
				system("pause");
				break;
			case 4:
				l.Xoa_msv();
				l.XuatDanhSach();
				system("pause");
				break;
			case 5:
			    l.XoaDs();
				system("pause");
			    break;
			case 6:
				Menu1(l);
				system("pause");
				break;
			case 7:
				Menu2(l);
				system("pause");
				break;
			case 8:
				Menu3(l);
				break;
			case 9:
				Menu4(l);
				break;
			case 10:
				l.luufile();
				break;
			default:
				printf("\nLua chon khong hop le !");
				system("pause");
				break;	
		}
	}
}
